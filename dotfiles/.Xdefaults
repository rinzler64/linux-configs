!! Appearance
urxvt.termName: rxvt-unicode
urxvt.scrollBar: false
urxvt.foreground: #C9D3D8
!! Font preferences
urxvt.font: xft:DejaVu\ Sans\ Mono\ for\ Powerline:pixelsize=22:antialias=true, xft:Source\ Code\ Pro\ Medium:pixelsize=22:antialias=true:hinting=true
urxvt.boldFont: xft:DejaVu\ Sans\ Mono\ for\ Powerline:pixelsize=22:weight=bold
urxvt.letterSpace: -1
!! Larger history limit
urxvt.saveLines: 1000000
URxvt.rgba: rgb
URxvt.antialias: true
URxvt.scrollStyle: rxvt
URxvt.cursorColor: #ED6F00
URxvt.cursorBlink: true

urxvt.depth: 32
urxvt.background: rgba:0000/3400/5400/c800

#URxvt.transparent: true
#URxvt.shading: 20

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size,keyboard-select
!! Open urls in browser with Control-Click
urxvt.urlLauncher: /usr/bin/chromium
urxvt.matcher.button: C1
!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease
!! Copy/Paste
URxvt.keysym.M-Escape: perl:keyboard-select:activate


!! Tango color theme
!! Strange - it matches tango from gnome-terminal, but looks different
URxvt.color0: rgb:00/00/00
URxvt.color1: rgb:CC/00/00
